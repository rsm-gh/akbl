#  This program is distributed in the hope that it will be useful,
#   but WITHOUT ANY WARRANTY; without even the implied warranty of
#   MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#   GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
#   along with this program; if not, write to the Free Software Foundation,
#   Inc., 51 Franklin Street, Fifth Floor, Boston, MA 02110-1301  USA.


if [ "$EUID" -ne 0 ]
  then echo "The script must be run as root."
  exit
fi

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $DIR
chmod a+x ./remove ./prerm ./postinst

#
# These files shouldn't be shiped with the package,
# they are removed in case they've been forgotten
# in the source code.
#
if [ -d $DIR/usr/share/alienware-kbl/__pycache__ ]; then
	rm -rf $DIR/usr/share/alienware-kbl/__pycache__
fi

#
# Remove previous versions
#
echo -e "\e[00;32mTo ensure a clean installation any previous version will be fully removed..\e[00m"
./remove -s

#
# Start the installation
#

echo -e "\e[00;32mCopying the software files (the message 'omiting directory *' is normal)...\e[00m"

# Documentation

install -d /usr/share/doc/AlienwareKBL
install -D $DIR/usr/share/doc/AlienwareKBL/* /usr/share/doc/AlienwareKBL

install -d /usr/share/doc/AlienwareKBL/ImagesPreview
install -D $DIR/usr/share/doc/AlienwareKBL/ImagesPreview/* /usr/share/doc/AlienwareKBL/ImagesPreview

install -d /usr/share/doc/AlienwareKBL/Licenses
install -D $DIR/usr/share/doc/AlienwareKBL/Licenses/* /usr/share/doc/AlienwareKBL/Licenses

install -d /usr/share/doc/AlienwareKBL/Programming
install -D $DIR/usr/share/doc/AlienwareKBL/Programming/* /usr/share/doc/AlienwareKBL/Programming


# Core

install -d /usr/bin
install -D $DIR/usr/bin/* /usr/bin

install -d /usr/lib/systemd/system
install -D $DIR/usr/lib/systemd/system/* /usr/lib/systemd/system

install -d /usr/share/AlienwareKBL
install -D $DIR/usr/share/AlienwareKBL/* /usr/share/AlienwareKBL

install -d /usr/share/AlienwareKBL/Configuration
install -D $DIR/usr/share/AlienwareKBL/Configuration/* /usr/share/AlienwareKBL/Configuration

install -d /usr/share/AlienwareKBL/Engine
install -D $DIR/usr/share/AlienwareKBL/Engine/* /usr/share/AlienwareKBL/Engine

# Addons

install -d /usr/share/applications
install -D $DIR/usr/share/applications/* /usr/share/applications

install -d /usr/share/AlienwareKBL/ADDONS
install -D $DIR/usr/share/AlienwareKBL/ADDONS/* /usr/share/AlienwareKBL/ADDONS

install -d /usr/share/AlienwareKBL/ADDONS/GUI
install -D $DIR/usr/share/AlienwareKBL/ADDONS/GUI/* /usr/share/AlienwareKBL/ADDONS/GUI

install -d /usr/share/AlienwareKBL/ADDONS/GUI/images
install -D $DIR/usr/share/AlienwareKBL/ADDONS/GUI/images/* /usr/share/AlienwareKBL/ADDONS/GUI/images

install -d /usr/share/AlienwareKBL/ADDONS/GUI/ZoneWidget
install -D $DIR/usr/share/AlienwareKBL/ADDONS/GUI/ZoneWidget/* /usr/share/AlienwareKBL/ADDONS/GUI/ZoneWidget

install -d /usr/share/AlienwareKBL/ADDONS/Indicator
install -D $DIR/usr/share/AlienwareKBL/ADDONS/Indicator/* /usr/share/AlienwareKBL/ADDONS/Indicator

install -d /usr/share/AlienwareKBL/ADDONS/Indicator/images
install -D $DIR/usr/share/AlienwareKBL/ADDONS/Indicator/images/* /usr/share/AlienwareKBL/ADDONS/Indicator/images


#
# Execute the post-installation script
#
echo -e "\e[00;32mExecuting the post-installation...\e[00m"
./postinst

echo -e "\e[00;32mAlienware-KBL is installed, enjoy it !\e[00m"

